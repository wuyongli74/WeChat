<Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
  <view class="order_main">
    <view class="order_item">
      <!-- <view wx:for="{{orders}}" wx:key="order_id" class="order_item"> -->
      <view class="order_no_row">
        <view class="order_no_text">订单编号</view>
        <view class="order_no_value">2345{{item.order_number}}</view>
      </view>
      <view class="order_price_row">
        <view class="order_price_text">订单价格</view>
        <view class="order_price_value">￥444{{item.order_price}}</view>
      </view>
      <view class="order_time_row">
        <view class="order_time_text">订单日期</view>
        <view class="order_time_value">345{{item.create_time_cn}}</view>
      </view>
    </view>
  </view>
</Tabs>